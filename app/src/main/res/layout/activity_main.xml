<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView
                android:id="@+id/anchorTL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anchorTL"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>


        <TextView
                android:id="@+id/anchorTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anchorTC"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/anchorTR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anchorTR"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:orientation="horizontal">

            <TextView
                    android:id="@+id/anchorBL"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anchorBL"/>


            <TextView
                    android:id="@+id/anchorBC"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="anchorBC"/>

            <TextView
                    android:id="@+id/anchorBR"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="anchorBR"/>


        </LinearLayout>
    </RelativeLayout>

    <Button android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch Bottom"
            android:layout_centerInParent="true"/>

    <com.sv.bubbletipslib.BubbleTipsTextView
            android:id="@+id/bubbleTipsTR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bubble tips TR"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:anchorView="@+id/anchorTR"
            app:arrowPos="top_right"
            app:spacing="10dp"/>

    <com.sv.bubbletipslib.BubbleTipsTextView
            android:id="@+id/bubbleTipsTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bubble tips TL"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:anchorView="@+id/anchorTL"
            app:arrowPos="top_left"
            app:spacing="10dp"/>

    <com.sv.bubbletipslib.BubbleTipsTextView
            android:id="@+id/bubbleTipsTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bubble tips TC"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:anchorView="@+id/anchorTC"
            app:arrowPos="top_center"
            app:spacing="10dp"/>

    <com.sv.bubbletipslib.BubbleTipsTextView
            android:id="@+id/bubbleTipsB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bubble tips B"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:spacing="10dp"/>
</RelativeLayout>